@inject ProtectedLocalStorage ProtectedLocalStorage
<SfMessage Severity="MessageSeverity.Info" ShowCloseIcon="true" Closed="Close">
    @text
</SfMessage>
@code{
    [Parameter]
    public string? text { get; set; }
    [Parameter]
    public string? name { get; set; }

    public async void Close()
    {
        try
        {
            await ProtectedLocalStorage.SetAsync(name, "true");
            StateHasChanged();
        }
        catch (Exception)
        {
            //throw; //commented for avoiding exception so the component can be used without introducing name
        }
    }
}
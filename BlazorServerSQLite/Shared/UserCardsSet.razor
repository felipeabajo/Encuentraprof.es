<div class="row flex-grid e-cards">
    @if(teachersList.Count == 0)
    {
        <p>
            There are no teachers available for your search query.
        </p>
    }
    else
    {
        @foreach (ApplicationUser teacher in teachersList)
        {
            <CascadingValue Value="teacher" Name="Teacher">
                <UserCard></UserCard>
            </CascadingValue>
        }
    }
</div>
@code {
    [CascadingParameter(Name = "UsersList")]
    private List<ApplicationUser> teachersList { get; set; }
    [CascadingParameter(Name = "User")]
    ApplicationUser? user { get; set; }
}

